@model propietario

@{
    ViewData["Title"] = "Borrar Propietario";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Borrar @Model.NombreCompleto</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoDePerfilURL" class="control-label"></label>
                        <input asp-for="FotoDePerfilURL" class="form-control" readonly />
                        <span asp-validation-for="FotoDePerfilURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCompleto" class="control-label"></label>
                        <input asp-for="NombreCompleto" class="form-control" readonly />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionPropietario" class="control-label"></label>
                        <input asp-for="DescripcionPropietario" class="form-control" readonly />
                        <span asp-validation-for="DescripcionPropietario" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdPropietario" />
                            <input type="submit" value="Confirmar" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar todo</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#FotoDePerfilURL").val();
        })
    </script>
}